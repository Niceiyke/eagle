# Example .env file for Eagle Framework
# Copy this file to .env and set values as needed

# --- Application ---
APP_NAME="Eagle Framework"
DEBUG=false
PROJECT_NAME="Eagle API"
API_V1_STR="/api/v1"

# --- Database ---
DATABASE_URL="sqlite+aiosqlite:///./eagle.db"   # e.g. postgresql+asyncpg://user:pass@localhost/db
ECHO_SQL=false

# --- Security & Auth ---
SECRET_KEY="your-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# --- Superuser (initial setup) ---
SUPERUSER_EMAIL="superuser@example.com"
SUPERUSER_PASSWORD="superuser-password"

HOST="127.0.0.1"
PORT=8000
DOCS_ENABLED=true
RELOAD=false
WORKERS=1
ENV=development

# --- CORS ---
CORS_ORIGINS="*"   # Comma-separated list, e.g. "http://localhost,http://127.0.0.1"

# --- Admin ---
ADMIN_ENABLED=true
ADMIN_PATH="/admin"

# --- Cache ---
CACHE_BACKEND="memory"  # Options: memory, redis
REDIS_URL=
CACHE_REDIS_URL=
CACHE_DEFAULT_TTL=3600

# --- Timezone ---
USE_TIMEZONE=false
TIMEZONE="UTC"

# --- OAuth (social login) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
